{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": "airbnb",
  "rules": {
    "no-unused-vars": [1, {
      "argsIgnorePattern": "res|next|^err"
    }],
    "no-underscore-dangle": [2, { "allow": ["__rootname", "__rootname2", "__basename"]}]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  }
}